{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    //ts 프로젝트에서 js를 읽을지 여부, default: false
    "outDir": "",
    //출력할 디렉토리를 설정합니다.

    //etc: js 관련 설정
    "checkJs": false,
    //allowJs: true로 js 사용시 js의 오류 검사 여부
    "maxNodeModuleJsDepth": 0
    //js파일 검색할 최대 깊이
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}
